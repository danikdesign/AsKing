<article class="card mt-3" id="<%= answer.id %>">
  <div class="card-body">
    <section class="card-text">
      <div class="my-2">
        <%= sanitize answer.body %>
      </div>

      <time datetime="<%= answer.formatted_created_at %>">
        <small><%= answer.formatted_created_at %></small>
      </time>
    </section>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <%= link_to 'Edit', edit_question_answer_path(question, answer), class: 'btn btn-outline-secondary btn-sm mt-2' %>
      <%= link_to 'Destroy', question_answer_path(question, answer), class: 'btn btn-outline-danger btn-sm mt-2',
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, value: "Destroy" %>
    </div>
  </div>
</article>