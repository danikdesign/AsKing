<% provide :page_title, 'Show question' %>
<% currently_at 'Questions' %>

<%= render @question %>

<%= render 'comments/commentable', commentable: @question, comment: @comment,
    html_id: 'questionComments'%>

<hr class="my-3">

<%= render 'answers/form' %>

<hr />

<h2 class="mt-3">Answers:</h2>

<% if @answers.length < 1 %>
  <h2 class="text-center text-muted">
    <small>No one has answered this question yet</small>
  </h2>
<% end %>

<div class="col mt-3">
  <%== pagination @pagy %>
</div>
<%= render partial: 'answers/answer', collection: @answers,
           as: :answer, locals: { question: @question } %>
<div class="col mt-3">
  <%== pagination @pagy %>
</div>
