<% provide :page_title, 'Show question' %>
<% currently_at 'Questions' %>

<h1 class="mb-4"><%= @question.title %></h1>

<div class="col-sm-auto mb-3">
  <%= @question.user.gravatar size: 65, css_class: 'd-block' %>
    <strong><%= @question.user.name_or_email %></strong>
</div>

<time datetime="<%= @question.formatted_created_at %>">
  <small><%= @question.formatted_created_at %></small>
</time>

<div class="lead my-3">
  <%= sanitize @question.body %>
</div>

<%= render 'comments/commentable', commentable: @question, comment: @comment %>

<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-outline-secondary' %>
<%= link_to 'Destroy', question_path(@question), class: 'btn btn-outline-danger',
            data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
            }, value: "Destroy" %>
<hr class="my-3">

<%= render 'answers/form' %>

<hr />

<h2 class="mt-3">Answers:</h2>

<% if @answers.length < 1 %>
  <h2 class="text-center text-muted">
    <small>No one has answered this question yet</small>
  </h2>
<% end %>

<div class="col mt-3">
  <%== pagination @pagy %>
</div>
<%= render partial: 'answers/answer', collection: @answers,
           as: :answer, locals: { question: @question } %>
<div class="col mt-3">
  <%== pagination @pagy %>
</div>
