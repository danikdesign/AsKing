<%= provide :main_menu do %>
  <header class="p-3 bg-dark text-white">
    <div class="container">
      <nav class="d-flex flex-warp align-items-center justify-content-center justify-content-lg-start">
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><%= nav_tab 'Home', root_path, class: 'nav-link px-2', current_page: current_page %></li>
          <li><%= nav_tab 'Questions', questions_path, class: 'nav-link px-2', current_page: current_page %></li>
          <li><%= nav_tab 'New', new_question_path, class: 'nav-link px-2', current_page: current_page %></li>
        </ul>

        <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
          <% if user_signed_in? %>
            <div class="dropdown">
              <button class="btn btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Hello, <%= current_user.name_or_email %>
              </button>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'href#', root_path, class: "dropdown-item" %>
                </li>
              </ul>
            </div>
            <% else %>
              <li><%= nav_tab 'Sign Up', new_user_path, class: "nav-link px-2", current_page: current_page %></li>
            <% end %>
        </ul>
      </nav>
    </div>
  </header>
<% end %>